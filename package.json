{
	"name": "sthemer",
	"version": "0.0.1",
	"description": "An opinionated solution to support multiple themes in your Svelte/SvelteKit application.",
	"author": "ivanhofer",
	"homepage": "https://github.com/ivanhofer/sthemer",
	"repository": {
		"type": "git",
		"url": "https://github.com/ivanhofer/sthemer"
	},
	"keywords": [
		"theming",
		"svelte",
		"sveltekit",
		"theme",
		"themes"
	],
	"license": "MIT",
	"scripts": {
		"-- DEV -------------------------------------------------": "",
		"dev": "svelte-kit dev",
		"-- TEST ------------------------------------------------": "",
		"test": "pnpm check",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"-- LINT ------------------------------------------------": "",
		"lint": "pnpm prettier && pnpm eslint ",
		"lint:fix": "pnpm prettier:fix && pnpm eslint:fix",
		"eslint:base": "eslint --cache",
		"eslint": "pnpm eslint:base -- .",
		"eslint:fix:base": "pnpm eslint:base -- --fix",
		"eslint:fix": "pnpm eslint:fix:base -- .",
		"prettier:base": "prettier --loglevel warn --plugin-search-dir=.",
		"prettier": "pnpm prettier:base -- --check .",
		"prettier:fix:base": "pnpm prettier:base -- --write",
		"prettier:fix": "pnpm prettier:fix:base -- .",
		"-- BUILD -----------------------------------------------": "",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"-- OTHER -----------------------------------------------": "",
		"prepare": "husky install && svelte-kit sync",
		"lint-staged": "lint-staged"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "1.0.0-next.50",
		"@sveltejs/kit": "1.0.0-next.348",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.17.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.0",
		"prettier": "^2.6.2",
		"prettier-plugin-svelte": "^2.7.0",
		"svelte": "^3.48.0",
		"svelte-check": "^2.7.2",
		"svelte-preprocess": "^4.10.7",
		"svelte2tsx": "^0.5.10",
		"tslib": "^2.4.0",
		"typescript": "~4.7.3"
	},
	"type": "module",
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/ivanhofer"
	},
	"volta": {
		"node": "16.15.1"
	}
}
